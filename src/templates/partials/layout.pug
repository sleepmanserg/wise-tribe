//- Include config.pug file that holds all variables
block config
  include ../helpers/config

//- Mixins - reusable code snippets
include ../helpers/mixins


doctype html
html(lang="en")

  //- head.pug template
  include head

  // Body
  body

    #preloader.preloader
      - for(var x = 0; x < 8; x++)
        div(class="preloader-star preloader-star-" + x)
      - for(var x = 0; x < 8; x++)
        div(class="preloader-circle preloader-circle-" + x)


    include header

    main
      block content

    include footer

    // JavaScript (jQuery) libraries, plugins and custom scripts
    script(type="module" src='js/vendor.min.js')
    script(type="module" src='js/theme.min.js')
