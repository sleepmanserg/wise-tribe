// Site Header
header.site-header
  .container.header-container
    .header-logo
      a(href="index.html").header-logo__link
        img(src="img/logo.svg", alt="Wise Music")
    .header-inner
      nav.header-nav
        ul.header-nav__list
          li.header-nav__item
            a.nav-link.header-nav__link(class=(pageTitle === 'Events') ? "active" : "nav-link" href="events.html") Events
          li.header-nav__item
            a(href="artists.html").nav-link.header-nav__link Artists
          li.header-nav__item
            a.nav-link.header-nav__link(class=(pageTitle === 'Blog') ? "active" : "nav-link" href="blog.html") Blog
          li.header-nav__item
            a(href="cooperation.html").nav-link.header-nav__link Cooperation
          li.header-nav__item
            a.nav-link.header-nav__link(class=(pageTitle === 'Charity') ? "active" : "nav-link" href="charity.html") Charity

      .header-shop
        a(href="#").shop__btn
          span Shop
          span soon
      .header-languages(data-active)
        .header-languages__current(data-target)
          span.header-languages__link EN
          img(src="img/icons/chevron-down.svg", alt="")
        .header-languages__dropdown
          a(href="#").header-languages__link.active EN
          a(href="#").header-languages__link EN
          a(href="#").header-languages__link EN
          a(href="#").header-languages__link EN
          a(href="#").header-languages__link EN
          a(href="#").header-languages__link EN
      // !!! Important to keep container class .btn-glow__wrapper and inner classes, for css styles!!!
      .header-connect
        .btn-glow__wrapper
          button(data-bs-toggle="modal" data-bs-target="#connectModal").btn.btn-glow
            span.btn-glow__inner
              span.btn-glow__text Connect
