extends partials/layout

//- Override default config variables
append config

  //- ********** Settings **********
  //- ==============================
  -var pageTitle = 'Home'
  //- ==============================
  //- ********* Settings END *******

//- Page Content
block content
  section.hero
    .swiper.hero-slider
      .swiper-wrapper
        .swiper-slide Slide 1
        .swiper-slide Slide 2
        .swiper-slide Slide 3
        .swiper-slide Slide 4
        .swiper-slide Slide 5
        .swiper-slide Slide 6
        .swiper-slide Slide 7
        .swiper-slide Slide 8
        .swiper-slide Slide 9
      .swiper-button-next
      .swiper-button-prev
      .swiper-pagination
  section.about
    .container
      .about-row
        .about-img
          picture
            source(srcset='img/about/about.webp' media='(min-width: 768px)' type='image/webp')
            source(srcset='img/about/about.avif' media='(min-width: 768px)' type='image/avif')
            source(srcset='img/about/about.png' media='(min-width: 768px)')
            source(srcset='img/about/about.webp' type='image/webp')
            source(srcset='img/about/about.avif' type='image/avif')
            img(src='img/about/about.png')
        .about-caption
          h2.section-title About Wise Music
          p.section-text.opacity-7
            span.text-blue W1SE  Music
            |  is a record label dedicated to recording and promoting cross-cultural high vibrational music. With unique sounds, inspirational lyrics, and passionate personalities expect unique music dedicated to raising the awareness of the world around us.

  section.releases
    .container
      .row
        .col-md-6
          .releases-caption
            h3.section-title.relises-title Releases
            h4.section-subtitle.release-subtitle Explore the latest tracks artists
            p.section-text.releases-text.opacity-7 We support artists and give the best opportunities to to develop the performer as a person and become as a famous world star.
        .col-md-6


