extends partials/layout-no-footer

//- Override default config variables
append config

	//- ********** Settings **********
	//- ==============================
	-var pageTitle = 'Player Big'
	//- ==============================
	//- ********* Settings END *******


//- Page Content
block content
	section.player-section
		.container
			a(href="artists.html").back-btn.position-relative
					i.icon-chevron-l
					span Back
		.container.px-0
			.player-wrapper
				.player.player-big
					.player-img__area
						.player-track__img
							img(src="", alt="")

						.player-big__controls
							#prev-song.player-big__controls-btn
								svg(width='23' height='18' viewBox='0 0 23 18' fill='none' xmlns='http://www.w3.org/2000/svg')
									path(opacity='0.6' d='M9.42847 10.7323C8.09513 9.96246 8.09513 8.03796 9.42847 7.26816L15.6428 3.68034C16.9761 2.91054 18.6428 3.87279 18.6428 5.41239L18.6428 12.588C18.6428 14.1276 16.9761 15.0899 15.6428 14.3201L9.42847 10.7323Z' fill='white')
									path(opacity='0.9' d='M3.85718 10.7323C2.52384 9.96246 2.52385 8.03796 3.85718 7.26816L10.0715 3.68034C11.4048 2.91054 13.0715 3.87279 13.0715 5.41239L13.0715 12.588C13.0715 14.1276 11.4048 15.0899 10.0715 14.3201L3.85718 10.7323Z' fill='white')

							.play-pause
								#play-song.player-big__controls-btn
									svg.play-icon(width='13' height='16' viewBox='0 0 13 16' fill='none' xmlns='http://www.w3.org/2000/svg')
										path(opacity='0.8' d='M12 6.26795C13.3333 7.03775 13.3333 8.96225 12 9.73205L3 14.9282C1.66667 15.698 2.12948e-06 14.7358 2.19678e-06 13.1962L2.65104e-06 2.80385C2.71834e-06 1.26425 1.66667 0.301996 3 1.0718L12 6.26795Z' fill='white')
									svg.pause-icon(width='8' height='10' viewBox='0 0 8 10' fill='none' xmlns='http://www.w3.org/2000/svg')
										g(opacity='0.9')
											rect(x='0.190796' y='0.428528' width='2.17678' height='9.14286' rx='1.08839' fill='white')
											rect(x='5.63269' y='0.428406' width='2.17678' height='9.14286' rx='1.08839' fill='white')


							#next-song.player-big__controls-btn
								svg(width='23' height='18' viewBox='0 0 23 18' fill='none' xmlns='http://www.w3.org/2000/svg')
									path(opacity='0.6' d='M14.1428 7.26799C15.4762 8.03779 15.4762 9.96229 14.1428 10.7321L7.92853 14.3199C6.5952 15.0897 4.92853 14.1275 4.92853 12.5879L4.92854 5.41221C4.92854 3.87261 6.5952 2.91036 7.92854 3.68016L14.1428 7.26799Z' fill='white')
									path(opacity='0.9' d='M19.7144 7.26799C21.0477 8.03779 21.0477 9.96229 19.7144 10.7321L13.5001 14.3199C12.1667 15.0897 10.5001 14.1275 10.5001 12.5879L10.5001 5.41221C10.5001 3.87261 12.1667 2.91036 13.5001 3.68016L19.7144 7.26799Z' fill='white')



					.player-timer
						span.player-timer__current 0:00
						| /
						span.player-timer__end
					.progress-area
						.progress_bar
							span

					audio(src="")#main-audio

				.container
					ul#myTab.player-tabs.nav.nav-tabs(role='tablist')
						li.nav-item(role='presentation')
							button#home-tab.active(data-bs-toggle='tab' data-bs-target='#home' type='button' role='tab' aria-controls='home' aria-selected='true')
								| Next
						li.nav-item(role='presentation')
							button#profile-tab(data-bs-toggle='tab' data-bs-target='#profile' type='button' role='tab' aria-controls='profile' aria-selected='false')
								| Text
						.form-control-line

				#myTabContent.tab-content
					#home.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='home-tab')
						.player-playlist
							ul.player-playlist__list.player-list
								li.player-playlist__list-item.player-list__item
									.player-list__item-rating
										img(src="img/icons/arrow-rating.svg")
									.player-list__item-img
										img(src="img/popular/1.jpg")
									.player-list__item-info
										.player-list__item-artist Soi
										.player-list__item-media Roma Nebo, Claudio asdasdasldkas
									.player-list__item-duration
										span.player-list__item-end 3:20
								li.player-playlist__list-item.player-list__item
									.player-list__item-rating
										img(src="img/icons/arrow-rating.svg")
									.player-list__item-img
										img(src="img/popular/1.jpg")
									.player-list__item-info
										.player-list__item-artist Soi
										.player-list__item-media Roma Nebo, Claudio asdasdasldkas
									.player-list__item-duration
										span.player-list__item-end 3:20

					#profile.tab-pane.fade(role='tabpanel' aria-labelledby='profile-tab') ...


				.player-controls__bottom.container
					.player-controls-likes
						a(href="#").player-controls-dislike.bottom-controls-btn
							i.icon-like
						a(href="#").player-controls-like.bottom-controls-btn
							i.icon-dislike
					.player-controls-song-details
						p.song-name
						p.song-media
					.player-controls__bottom-actions
						button#song-sound.bottom-controls-btn
							i.icon-volume
						button#repeat-plist.bottom-controls-btn.repeat(title="Playlist looped")
							i.icon-repeat
							i.icon-repeat-one
							i.icon-repeat-all
						button#shuffle-plist.bottom-controls-btn
							i.icon-shuffle
						button#fullscreen-btn.bottom-controls-btn
							i.icon-shuffle









